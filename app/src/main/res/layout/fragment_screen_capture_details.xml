<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundBlack">

    <EditText
        android:id="@+id/screenDetailTitleEdt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:background="@drawable/highlited_rect"
        android:paddingStart="10dp"
        android:textColorHint="@color/offWhite"
        android:hint="Enter Stream Title..."/>

    <Button
        android:id="@+id/screenDetailStartStreamBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Stream"
        android:layout_below="@+id/screenDetailTitleEdt"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/inter_tight"
        android:textColor="@color/black"/>



</RelativeLayout>