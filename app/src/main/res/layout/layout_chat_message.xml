<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:layout_marginVertical="5dp"
    android:background="@color/backgroundBlack">

    <androidx.cardview.widget.CardView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:cardCornerRadius="15dp"
        android:elevation="0dp"
        android:layout_marginStart="5dp"
        android:id="@+id/chatImageCircularCard"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/chatUserImg"/>

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/chatUserNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/grey"
        android:text="Abhi Don"
        android:layout_toRightOf="@+id/chatImageCircularCard"
        android:layout_marginStart="5dp"
        android:textSize="18sp"
        android:layout_marginTop="3dp"/>

    <TextView
        android:id="@+id/chatStreamerTickTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:textColor="@color/synapseTheme"
        android:text="\u2714"
        android:layout_toRightOf="@+id/chatUserNameTxt"
        android:layout_marginStart="5dp"
        android:textSize="18sp"
        android:layout_marginTop="3dp"/>

    <TextView
        android:id="@+id/chatMessageTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/chatStreamerTickTxt"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="Hi How are yoy"
        android:layout_marginEnd="5dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:autoSizeTextType="uniform"/>



</RelativeLayout>