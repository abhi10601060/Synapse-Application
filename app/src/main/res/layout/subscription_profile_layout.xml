<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="70dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:background="@color/backgroundBlack"
    android:layout_marginHorizontal="10dp">



    <androidx.cardview.widget.CardView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:cardCornerRadius="30dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/subscription_Img_Card">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/subscription_profile_Img"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:text="DE4DSHOT"
        android:lines="1"
        android:layout_below="@id/subscription_Img_Card"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:gravity="center"
        android:id="@+id/subscription_name" />

    <View
        android:visibility="gone"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/subscription_live_indicator"
        android:background="@drawable/live_indicator"
        android:layout_alignBottom="@id/subscription_Img_Card"
        android:layout_alignEnd="@id/subscription_Img_Card"
        android:elevation="2dp"
        />

</RelativeLayout>