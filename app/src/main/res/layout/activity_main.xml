<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="400dp">

        <io.livekit.android.renderer.SurfaceViewRenderer
            android:id="@+id/stream_surface"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />

    </FrameLayout>


    <View
        android:id="@+id/vertical_center_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:layout_marginTop="500dp"
        />

    <RelativeLayout
        android:id="@+id/button_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/vertical_center_line"
        android:padding="10dp">

        <Button
            android:id="@+id/join_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="join"/>

        <Button
            android:id="@+id/close_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="close"
            android:layout_toRightOf="@id/join_btn"
            android:layout_marginStart="5dp"/>

        <Button
            android:id="@+id/start_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="start"
            android:layout_toRightOf="@id/close_btn"
            android:layout_marginStart="5dp"/>

        <Button
            android:id="@+id/stop_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="stop"
            android:layout_toRightOf="@id/start_btn"
            android:layout_marginStart="5dp"/>

        <EditText
            android:id="@+id/chat_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/start_btn"
            android:layout_margin="10dp"/>
        <Button
            android:id="@+id/send_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chat_box"
            android:text="send"
            android:layout_centerHorizontal="true"
            />

        <Button
            android:id="@+id/cast_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cast"
            android:layout_toRightOf="@id/send_btn"
            android:layout_below="@id/chat_box"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/received_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/send_btn"
            android:text="message"/>

    </RelativeLayout>

</RelativeLayout>