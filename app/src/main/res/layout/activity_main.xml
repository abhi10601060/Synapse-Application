<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.MainActivity">

    <org.webrtc.SurfaceViewRenderer
        android:id="@+id/surfaceViewRenderer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/streams_parent"/>

    <RelativeLayout
        android:id="@+id/streams_parent"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background= "@color/sky"
        android:layout_above="@+id/button_parent">

        <Button
            android:id="@+id/stream_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="stream:streamer"/>

        <EditText
            android:id="@+id/stream_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/stream_button"
            android:layout_marginStart="20dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@color/black"
        android:gravity="center"
        android:id="@+id/button_parent"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start"
            android:id="@+id/start_stream"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop"
            android:id="@+id/stop_stream"
            android:layout_toEndOf="@+id/start_stream"
            android:layout_marginStart="10dp"/>

        <Button
            android:id="@+id/fetch_streams"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fetch"
            android:layout_toRightOf="@+id/stop_stream"
            android:layout_marginStart="10dp"/>

    </RelativeLayout>



</RelativeLayout>