<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundBlack">

    <TextView
        android:id="@+id/profileDetailsHeadingTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        style="@style/BasicText"
        android:letterSpacing="0.2"
        android:textSize="28sp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/profileDetailsImageCard"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:cardCornerRadius="60dp"
        android:layout_below="@id/profileDetailsHeadingTxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/profileDetailsPictureImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher" />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/profileDetailsName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileDetailsImageCard"
        android:layout_centerHorizontal="true"
        android:text="Abhi Velekar"
        android:layout_marginTop="15dp"
        style="@style/BasicText"
        android:textSize="24sp"
        android:textStyle="bold"
        android:letterSpacing="0.1"/>

    <RelativeLayout
        android:id="@+id/profileDetailsBioRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileDetailsName"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">

        <RelativeLayout
            android:id="@+id/profileDetailsBioLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bio"
                style="@style/BasicText"
                android:textSize="22sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/profileDetailsBioTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi My name is Abhi hjkhha afhajhf ahahfjafha \nI am a Android Developer \nAnd building synapse."
            android:textSize="16sp"
            android:layout_below="@id/profileDetailsBioLL"
            style="@style/BasicText"
            android:letterSpacing="0.1"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/profileDetailsSubsRL"
        android:layout_marginVertical="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileDetailsBioRL"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/profileDetailsSubsLL"
            >
            <TextView
                android:id="@+id/profileDetailsSubscriberTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1176"
                style="@style/BasicText"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="subscribers"
                style="@style/BasicText"
                android:textStyle="bold"
                android:textSize="21sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/profileDetailsSubsLL"
            android:layout_marginLeft="60dp"
            >
            <TextView
                android:id="@+id/profileDetailsSubscriptionsTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1253"
                style="@style/BasicText"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="subscriptions"
                style="@style/BasicText"
                android:textStyle="bold"
                android:textSize="21sp"/>

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recent Videos"
        android:id="@+id/profileDetailsRecentVideosTxt"
        android:layout_below="@id/profileDetailsSubsRL"
        style="@style/BasicText"
        android:textSize="22sp"
        android:textStyle="bold"
        android:letterSpacing="0.1"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"/>


</RelativeLayout>